@model Badass.Core.Areas.Admin.ViewModels.UserViewModel
@{
    ViewData["Title"] = "Edit";
}

<div class="card shadow my-4 col-md-9 px-0">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">PostType</h6>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="UserId" />
                    <input type="hidden" asp-for="RoleId" />
                    <div class="form-group">
                        <label asp-for="UserName" class="control-label"></label>
                        <input asp-for="UserName" class="form-control" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                    <div class="form-group m-0">
                        <label for="roleId" class="control-label">Roles </label>
                        <select id="roleId" name="roleId" class="form-control" asp-items="ViewBag.RoleId">
                            <option value="" selected>Select PostType</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary mt-4" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-action="Index">Back to List</a>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

