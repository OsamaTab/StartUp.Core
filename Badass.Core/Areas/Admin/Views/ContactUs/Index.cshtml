@model IEnumerable<Badass.Core.Models.ContactUs>

@{
}
<div class="card h-100 my-2 mx-2">
    <div class="card-body">
        <div class="p-0 mx-0 row">
            <h3 class="card-title col-md-8">ContactUs</h3>
            
        </div>
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Row</th>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Email)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Massage)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.SendTime)
                        </th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td></td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Massage)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SendTime)
                            </td>
                            <td>

                                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
