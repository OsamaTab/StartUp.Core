</section>
<div class="">
    <form id="contact" asp-controller="Home" asp-action="Index" method="post">
        <h3>Contact Us</h3>
        <h4>Contact us today, and get reply with in 24 hours!</h4>
        <fieldset>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="ContactUs.Name" placeholder="Your name" type="text" required />
            <span asp-validation-for="ContactUs.Name" class="text-danger"></span>
        </fieldset>
        <fieldset>
            <input asp-for="ContactUs.Email" placeholder="Your Email Address" type="email" tabindex="2" required>
            <span asp-validation-for="ContactUs.Email" class="text-danger"></span>
        </fieldset>
        <fieldset>
            <textarea asp-for="ContactUs.Massage" placeholder="Type your Message Here...." tabindex="5" required></textarea>
            <span asp-validation-for="ContactUs.Massage" class="text-danger"></span>
        </fieldset>
        <fieldset>
            <button name="submit" type="submit" id="contact-submit" data-submit="...Sending">Submit</button>
        </fieldset>
    </form>

</div>