<h1 class="text-center pt-5 text-white" >Latest News</h1>
<div class="row-card row">
    @foreach (var item in Model.Posts)
    {
        <div class="col-md-4 example-2 card1">
            <div class="wrapper">
                <div class="header">
                    <div class="date">
                        @*<span class="day">12</span>
                            <span class="month">Aug</span>
                            <span class="year">2016</span>*@
                        @Html.DisplayFor(modelItem => item.CreatedDate)
                    </div>
                    <ul class="menu-content">
                        <li>
                            <a href="#" class="fa fa-bookmark-o"></a>
                        </li>
                        <li><a href="#" class="fa fa-heart-o"><span>18</span></a></li>
                        <li><a href="#" class="fa fa-comment-o"><span>3</span></a></li>
                    </ul>
                </div>
                <div class="data">
                    <div class="content">
                        <span class="Catagore">@Html.DisplayFor(modelItem => item.PostType.Title)</span>
                        <h1 class="title"><a asp-controller="Posts" asp-action="Details" asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.Title)</a></h1>
                        <p class="text">@Html.DisplayFor(modelItem => item.Body)</p>
                        <a asp-controller="Posts" asp-action="Details" asp-route-id="@item.Id" class="button">Read more</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

